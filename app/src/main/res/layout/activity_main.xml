<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- this is a image that is used for background -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/tootsie2" />

    <!-- in these TextViews I defined the copyright, the text and the layout for the card, not forgetting the color and font setup too -->

    <TextView
        android:id="@+id/copyright_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:fontFamily="Sans-sherif-light"
        android:padding="20dp"
        android:text="@string/copyright"
        android:textColor="#fafafa"
        android:textSize="15sp" />

    <!-- textview with business name -->

    <TextView
        android:id="@+id/hello_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#EDE7F6"
        android:fontFamily="Sans-sherif-medium"
        android:padding="10dp"
        android:text="@string/businessname"
        android:textColor="#000066"
        android:textSize="20sp" />

    <!-- textview with opening hours -->

    <TextView
        android:id="@+id/open_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/copyright_text_view"
        android:layout_alignLeft="@+id/contact_info_text_view"
        android:layout_alignStart="@+id/contact_info_text_view"
        android:layout_marginBottom="37dp"
        android:fontFamily="Sans-sherif-light"
        android:padding="10dp"
        android:text="@string/open_info"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- textview with contact information -->

    <TextView
        android:id="@+id/contact_info_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/open_info_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:fontFamily="Sans-sherif-light"
        android:padding="10dp"
        android:text="@string/contact_info"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
    </ScrollView>